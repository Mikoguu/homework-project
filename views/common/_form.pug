section.form
  .container
    if (msgemail)
      .status= msgemail
    .form__subtitle.subtitle Контактные данные
    h2.form__title.title Пишите, пообщаемся
    form(action="/" method="POST" enctype="application/x-www-form-urlencoded")#mail.form-email
      .form-email__line
        label.form-email__label(for="") Имя *
        input#name-input.form-email__input(type="text" name="name")
      .form-email__line
        label.form-email__label(for="") Email *
        input#email-input.form-email__input(type="email" name="email")
      .form-email__line
        label.form-email__label(for="") Сообщение
        textarea(name="message")#message-input.form-email__textarea
      .form-email__line
        button(type="submit").form-email__button.button Отправить
    